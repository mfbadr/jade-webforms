hmtl
  head
    meta(charset='utf-8')
    title Box party!
    link(rel='stylesheet' href='css/box1.css')
  body
    h1 Design your boxes!
    form(method='post', action='/boxes')
      label # of Boxes
      input(type='text', name='boxes', placeholder='e.g. 5000')
      label Width
      input(type='text', name='width', placeholder='e.g. 1-15')
      label Height
      input(type='text', name='height', placeholder='e.g. 20-30')
      label Colors
      textarea( name='colors') blue,green,yellow,orange,pink,black,white,red,brown,purple,olive
      button Make some boxes!
