doctype html
html
  head
    meta(charset='utf-8')
    title Calc
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 Calculator
    h3  #{x} #{op} #{y} #{equals} #{result}
    form(method='post', action='/calc')
      //label X:
      input(type='text', name='x', placeholder='x', autofocus=true)
      //label Operator:
      // input(type='text', name='op', placeholder='+,-,*,/')
      select(name='op')
        option +
        option -
        option *
        option /
      //label Y:
      input(type='text', name='y', placeholder='y')
      button Calculate!

